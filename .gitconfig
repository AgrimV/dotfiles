    pager = delta
[interactive]
    diffFilter = delta --color-only
[delta]
    navigate = true
    line-numbers = true
    side-by-side = true

[merge]
	tool = nvimdiff
[mergetool "nvimdiff"]
	layout = LOCAL,MERGED,REMOTE
